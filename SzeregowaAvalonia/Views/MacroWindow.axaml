	</Window.Resources>
	<Window.Styles>
		<Styles>
			
			<Style Selector="TextBox">
				<Setter Property="Foreground" Value="White"/>
				<Setter Property="CornerRadius" Value="15"/>
				<Setter Property="Background" Value="Black"/>
				<Setter Property="Margin" Value="0 5 0 0"/>
			</Style>
			<Style Selector="Button.Save">
				<Setter Property="Foreground" Value="White"/>
				<Setter Property="CornerRadius" Value="15"/>
				<Setter Property="Background" Value="#38CA53"/>
				<Setter Property="Margin" Value="0 5 0 0"/>
				<Setter Property="HorizontalContentAlignment" Value="Center"/>
				<Setter Property="BorderBrush" Value="#38CA53"/>
				<Setter Property="BorderThickness" Value="2"/>
			</Style>
			<Style Selector="Button.Save:pointerover /template/ ContentPresenter#PART_ContentPresenter">
				<Setter Property="Background" Value="Transparent"/>
				<Setter Property="BorderBrush" Value="#38CA53"/>
				<Setter Property="BorderThickness" Value="2"/>
			</Style>
			<Style Selector="Button.Files">
				<Setter Property="Foreground" Value="White"/>
				<Setter Property="CornerRadius" Value="15"/>
				<Setter Property="Background" Value="Transparent"/>
				<Setter Property="BorderBrush" Value="#38CA53"/>
				<Setter Property="BorderThickness" Value="2"/>
				<Setter Property="HorizontalContentAlignment" Value="Center"/>
			</Style>
			<Style Selector="Button.Files:pointerover /template/ ContentPresenter#PART_ContentPresenter">
				<Setter Property="Background" Value="#38CA53"/>
			</Style>
		</Styles>
	</Window.Styles>
	<Border Padding="5" Background="#222222" >
		<StackPanel Orientation="Vertical" Spacing="5">
			<StackPanel Orientation="Horizontal" Spacing="5">
				<Button Classes="Files">
					<StackPanel Orientation="Horizontal" Spacing="5">
						<PathIcon Data="{StaticResource arrow_import_regular}" Foreground="White"></PathIcon>
						<TextBlock>Import</TextBlock>
					</StackPanel>
				</Button>
				<Button Classes="Files">
					<StackPanel Orientation="Horizontal" Spacing="5">
					<PathIcon Data="{StaticResource arrow_export_rtl_regular}" Foreground="White"></PathIcon>
					<TextBlock>Export</TextBlock>
					</StackPanel>
				</Button>
			</StackPanel>
			<Grid>
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="2*"/>
					<!-- Macro Left -->
					<ColumnDefinition Width="*"/>
					<!-- Title Left -->
					<ColumnDefinition Width="Auto"/>
					<!-- Separator -->
					<ColumnDefinition Width="2*"/>
					<!-- Macro Right -->
					<ColumnDefinition Width="*"/>
					<!-- Title Right -->
				</Grid.ColumnDefinitions>

				<!-- 10 rows -->
				<Grid.RowDefinitions>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
					<RowDefinition Height="Auto"/>
				</Grid.RowDefinitions>

				<!-- Lewa kolumna -->
				<TextBox Text="{Binding MacrosList[0].Command, Mode=TwoWay}" Grid.Row="0" Grid.Column="0" Watermark="Macro 1"/>
				<TextBox Text="{Binding MacrosList[0].Title, Mode=TwoWay}" Grid.Row="0" Grid.Column="1" Watermark="Title 1"/>
				<TextBox Text="{Binding MacrosList[1].Command, Mode=TwoWay}" Grid.Row="1" Grid.Column="0" Watermark="Macro 2"/>
				<TextBox Text="{Binding MacrosList[1].Title, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" Watermark="Title 2"/>
				<TextBox Text="{Binding MacrosList[2].Command, Mode=TwoWay}" Grid.Row="2" Grid.Column="0" Watermark="Macro 3"/>
				<TextBox Text="{Binding MacrosList[2].Title, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" Watermark="Title 3"/>
				<TextBox Text="{Binding MacrosList[3].Command, Mode=TwoWay}" Grid.Row="3" Grid.Column="0" Watermark="Macro 4"/>
				<TextBox Text="{Binding MacrosList[3].Title, Mode=TwoWay}" Grid.Row="3" Grid.Column="1" Watermark="Title 4"/>
				<TextBox Text="{Binding MacrosList[4].Command, Mode=TwoWay}" Grid.Row="4" Grid.Column="0" Watermark="Macro 5"/>
				<TextBox Text="{Binding MacrosList[4].Title, Mode=TwoWay}" Grid.Row="4" Grid.Column="1" Watermark="Title 5"/>
				<TextBox Text="{Binding MacrosList[5].Command, Mode=TwoWay}" Grid.Row="5" Grid.Column="0" Watermark="Macro 6"/>
				<TextBox Text="{Binding MacrosList[5].Title, Mode=TwoWay}" Grid.Row="5" Grid.Column="1" Watermark="Title 6"/>
				<TextBox Text="{Binding MacrosList[6].Command, Mode=TwoWay}" Grid.Row="6" Grid.Column="0" Watermark="Macro 7"/>
				<TextBox Text="{Binding MacrosList[6].Title, Mode=TwoWay}" Grid.Row="6" Grid.Column="1" Watermark="Title 7"/>
				<TextBox Text="{Binding MacrosList[7].Command, Mode=TwoWay}" Grid.Row="7" Grid.Column="0" Watermark="Macro 8"/>
				<TextBox Text="{Binding MacrosList[7].Title, Mode=TwoWay}" Grid.Row="7" Grid.Column="1" Watermark="Title 8"/>
				<TextBox Text="{Binding MacrosList[8].Command, Mode=TwoWay}" Grid.Row="8" Grid.Column="0" Watermark="Macro 9"/>
				<TextBox Text="{Binding MacrosList[8].Title, Mode=TwoWay}" Grid.Row="8" Grid.Column="1" Watermark="Title 9"/>
				<TextBox Text="{Binding MacrosList[9].Command, Mode=TwoWay}" Grid.Row="9" Grid.Column="0" Watermark="Macro 10"/>
				<TextBox Text="{Binding MacrosList[9].Title, Mode=TwoWay}" Grid.Row="9" Grid.Column="1" Watermark="Title 10"/>

				<!-- Prawa kolumna -->
				<TextBox Text="{Binding MacrosList[10].Command, Mode=TwoWay}" Grid.Row="0" Grid.Column="3" Watermark="Macro 11"/>
				<TextBox Text="{Binding MacrosList[10].Title, Mode=TwoWay}" Grid.Row="0" Grid.Column="4" Watermark="Title 11"/>
				<TextBox Text="{Binding MacrosList[11].Command, Mode=TwoWay}" Grid.Row="1" Grid.Column="3" Watermark="Macro 12"/>
				<TextBox Text="{Binding MacrosList[11].Title, Mode=TwoWay}" Grid.Row="1" Grid.Column="4" Watermark="Title 12"/>
				<TextBox Text="{Binding MacrosList[12].Command, Mode=TwoWay}" Grid.Row="2" Grid.Column="3" Watermark="Macro 13"/>
				<TextBox Text="{Binding MacrosList[12].Title, Mode=TwoWay}" Grid.Row="2" Grid.Column="4" Watermark="Title 13"/>
				<TextBox Text="{Binding MacrosList[13].Command, Mode=TwoWay}" Grid.Row="3" Grid.Column="3" Watermark="Macro 14"/>
				<TextBox Text="{Binding MacrosList[13].Title, Mode=TwoWay}" Grid.Row="3" Grid.Column="4" Watermark="Title 14"/>
				<TextBox Text="{Binding MacrosList[14].Command, Mode=TwoWay}" Grid.Row="4" Grid.Column="3" Watermark="Macro 15"/>
				<TextBox Text="{Binding MacrosList[14].Title, Mode=TwoWay}" Grid.Row="4" Grid.Column="4" Watermark="Title 15"/>
				<TextBox Text="{Binding MacrosList[15].Command, Mode=TwoWay}" Grid.Row="5" Grid.Column="3" Watermark="Macro 16"/>
				<TextBox Text="{Binding MacrosList[15].Title, Mode=TwoWay}" Grid.Row="5" Grid.Column="4" Watermark="Title 16"/>
				<TextBox Text="{Binding MacrosList[16].Command, Mode=TwoWay}" Grid.Row="6" Grid.Column="3" Watermark="Macro 17"/>
				<TextBox Text="{Binding MacrosList[16].Title, Mode=TwoWay}" Grid.Row="6" Grid.Column="4" Watermark="Title 17"/>
				<TextBox Text="{Binding MacrosList[17].Command, Mode=TwoWay}" Grid.Row="7" Grid.Column="3" Watermark="Macro 18"/>
				<TextBox Text="{Binding MacrosList[17].Title, Mode=TwoWay}" Grid.Row="7" Grid.Column="4" Watermark="Title 18"/>
				<TextBox Text="{Binding MacrosList[18].Command, Mode=TwoWay}" Grid.Row="8" Grid.Column="3" Watermark="Macro 19"/>
				<TextBox Text="{Binding MacrosList[18].Title, Mode=TwoWay}" Grid.Row="8" Grid.Column="4" Watermark="Title 19"/>
				<TextBox Text="{Binding MacrosList[19].Command, Mode=TwoWay}" Grid.Row="9" Grid.Column="3" Watermark="Macro 20"/>
				<TextBox Text="{Binding MacrosList[19].Title, Mode=TwoWay}" Grid.Row="9" Grid.Column="4" Watermark="Title 20"/>

				<!-- Separator between columns -->
				<Separator Grid.Column="2" Grid.Row="0" Grid.RowSpan="10" Margin="15 0 10 0" HorizontalAlignment="Center" Width="1" Height="300" Background="White" />
			</Grid>
			
			<Button HorizontalAlignment="Right" Width="100" Classes="Save" Command="{Binding SaveMacrosCommand}">Save</Button>
		</StackPanel>
	</Border>
</Window>