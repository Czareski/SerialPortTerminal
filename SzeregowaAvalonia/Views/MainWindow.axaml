<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:SzeregowaAvalonia.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:views="clr-namespace:SzeregowaAvalonia.Views"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="900"
        x:Class="SzeregowaAvalonia.Views.MainWindow"
        Icon="/Assets/avalonia-logo.ico"
        Title="SzeregowaAvalonia"
		MinWidth="1500" 
		MinHeight="700"
		>
	    <Window.Styles>
			<Style Selector="Border.bord">
				<Setter Property="BorderThickness" Value="2"/>
				<Setter Property="BorderBrush" Value="Gray"/>
				<Setter Property="Padding" Value="10"/>
				<Setter Property="Margin" Value="5"/>
				<Setter Property="Background" Value="#FF5F3B"/>
			</Style>

			<Style Selector="TextBlock.TopPanelElement">
				<Setter Property="Margin" Value="50 0 50 0"/>
				
			</Style>
			<Style Selector="Button.TopPanelElement">
				<Setter Property="Margin" Value="50 0 50 0"/>
			</Style>
			<Style Selector="TextBlock.Param_name">
				<Setter Property="FontFamily" Value="Lato-Bold"/>
				<Setter Property="FontWeight" Value="900"/>
				<Setter Property="FontSize" Value="30"/>
				<Setter Property="TextAlignment" Value="Center"/>
			</Style>
			<Style Selector="Border.Params_block">
				<Setter Property="Padding" Value="10"/>
				<Setter Property="Margin" Value="10"/>
			</Style>
			<Style Selector="ComboBox">
				<Setter Property="Margin" Value="0 10 0 0"/>
			</Style>
			<Style Selector="TextBlock.recieved">
				<Setter Property="Foreground" Value="Red"/>
				<Setter Property="Background" Value="Black"/>
			</Style>
		</Window.Styles>
	    <views:MainView />
</Window>
